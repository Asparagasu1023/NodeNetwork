             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NodeNetwork.Views"
             mc:Ignorable="d" 
             Background="#f1f1f1"
             d:DesignHeight="500" d:DesignWidth="320">

